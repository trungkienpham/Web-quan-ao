


@{
    ViewBag.Title = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header{
    Danh sách người dùng
}
@section jsFooter{
    <script>

            $.ajax({
                url: "/Json/loadData",
                data: "json",
                type: "get",
                success: function (response) {
                    $.each(response, function (i, item) {                    
                        var tr = $("<tr/>"); // khởi tạo tr
                        $("<td/>").html(item.UserName).appendTo(tr);
                        $("<td/>").html(item.Name).appendTo(tr);
                        $("<td/>").html(item.Email).appendTo(tr);
                        $("<td/>").html(item.Phone).appendTo(tr);
                        tr.appendTo("tbody#result");
                    });
                }
             });
    </script>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách người dùng
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                @using (Html.BeginForm("Index", "test", FormMethod.Get))
                {
                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" id="search" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-success">Tìm kiếm</button>
                                <a class="btn btn-primary" href="/Admin/User/Create">Thêm</a>
                            </div>


                        </div>
                    </div>
                }

                <div class="table-responsive">

                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>Tài Khoản</th>
                                <th>Tên</th>
                                <th>Email</th>
                                <th>Số ĐT</th>
                               
                              
                            </tr>
                        </thead>
                        <tbody id="result"> </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->

    </div>
</div>
